<% alert_color = {
  'passed' => 'success',
  'failed' => 'error',
}[result.state] || "info" %>

<%= turbo_frame_tag result do %>
  <% if result.passed? %>
    ✅
  <% elsif result.failed? %>
    ❌
  <% end %>
  Assessment [<%= result.state.upcase %>] <%= "- #{result.time_spent}s" if result.finished? %>
  <br/>
<% end %>
