<div class="hero">
  <center>
    <p>Access by invitation only<br/><br/></p>
    <%= simple_form_for :invitation, url: wizard_path(:enter_invitation_code), method: :put, local: true do |f| %>
      <div class="flex justify-center border-t border-base-300">
        <%= f.error_notification %>
        <%= f.input :code, label: false, placeholder: "Invitation code", input_html: { value: params[:code] }  %>
        <%= f.button :submit, "ACCEPT INVITATION", class: "btn btn-primary" %>
      </div>
    <% end %>
    <p><br/>Having trouble with your invite? <a class="link">Contact us</a></p>
  </center>
</div>
